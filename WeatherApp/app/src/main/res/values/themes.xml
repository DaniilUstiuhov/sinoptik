<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Base application theme (Light) -->
    <style name="Theme.WeatherApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_light</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <!-- AppBar overlay theme -->
    <style name="Theme.WeatherApp.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <!-- Popup overlay theme -->
    <style name="Theme.WeatherApp.PopupOverlay" parent="ThemeOverlay.Material3.Light" />
    
</resources>
